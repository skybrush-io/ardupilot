# Milky Way Drones - Capella v1.6
# hw definition file for processing by chibios_hwdef.py

# MCU class and specific type
MCU STM32H7xx STM32H743xx

# crystal frequency
OSCILLATOR_HZ 16000000

# board ID for firmware load
APJ_BOARD_ID 1199

FLASH_SIZE_KB 2048

# with 2M flash we can afford to optimize for speed
env OPTIMIZE -O2

# ChibiOS system timer
STM32_ST_USE_TIMER 5

# bootloader takes first sector
FLASH_RESERVE_START_KB 128

# default to all pins low to avoid ESD issues
DEFAULTGPIO OUTPUT LOW PULLDOWN

# order of UARTs (and USB) - USB, Telem1, Telem2, GPS, RemoteID, RCIN, Debug
SERIAL_ORDER OTG1 USART2 USART3 USART1 USART6 UART8 UART7 OTG2

# now we define the pins that USB is connected on
USB_STRING_PRODUCT "Capella v1.6"
USB_STRING_MANUFACTURER "Milky Way Drones"
PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1
PA8  VBUS INPUT OPENDRAIN

define HAL_OTG2_PROTOCOL SerialProtocol_MAVLink2

# these are the pins for SWD debugging with a STlinkv2 or black-magic probe
PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# SPI1 - ICM45686 IMU
PA5 SPI1_SCK SPI1
PA6 SPI1_MISO SPI1
PA7 SPI1_MOSI SPI1

# SPI2 - ICM42688 IMU
PD3 SPI2_SCK SPI2
PC2 SPI2_MISO SPI2
PC1 SPI2_MOSI SPI2

# SPI3 - FRAM
PB3 SPI3_SCK SPI3
PB4 SPI3_MISO SPI3
PB2 SPI3_MOSI SPI3

# SPI4 - RM3100 / DPS310
PE2 SPI4_SCK SPI4
PE5 SPI4_MISO SPI4
PE6 SPI4_MOSI SPI4

# SPI CS
PA15 	IMU1_CS     CS
PD4 	IMU1_CS2	CS
PA10	FRAM_CS		CS SPEED_VERYLOW
PD7 	IMU2_CS     CS
PB9 	DPS310_CS	CS
PB8 	RM3100_CS	CS

# I2C1
PB6 I2C1_SCL I2C1
PB7 I2C1_SDA I2C1

# I2C2
PB10 I2C2_SCL I2C2
PB11 I2C2_SDA I2C2

# define the order of ther I2C buses 
I2C_ORDER I2C1 I2C2 
# define HAL_I2C_INTERNAL_MASK 3

# NODMA I2C*
# define STM32_I2C_USE_DMA FALSE

# define UARTs

# USART1 is GPS (maybe NODMA?)
PB15 USART1_RX USART1
PA9  USART1_TX USART1

# USART2 is Telem 1/ESP8266
PD6 USART2_RX USART2
PD5 USART2_TX USART2 

# USART3 is Telem 2/SiK
PD9 USART3_RX USART3 NODMA
PD8 USART3_TX USART3 NODMA
# PD11 USART3_CTS USART3
# PB14 USART3_RTS USART3

# USART6 is Expansion/RemoteID (maybe NODMA?)
PC7 USART6_RX USART6
PC6 USART6_TX USART6

# UART7 is Debug
PE7 UART7_RX UART7 NODMA
PE8 UART7_TX UART7 NODMA

# UART8 is RCIN
PE0 UART8_RX UART8
PE1 UART8_TX UART8

# PWM AUX channels
PE9  TIM1_CH1 TIM1 PWM(1) GPIO(50) BIDIR 
PE11 TIM1_CH2 TIM1 PWM(2) GPIO(51)
PE13 TIM1_CH3 TIM1 PWM(3) GPIO(52) BIDIR
PE14 TIM1_CH4 TIM1 PWM(4) GPIO(53)

PA2  TIM2_CH3 TIM2 PWM(5) GPIO(54)
PA3  TIM2_CH4 TIM2 PWM(6) GPIO(55)

PD12 TIM4_CH1 TIM4 PWM(7) GPIO(56)
PD13 TIM4_CH2 TIM4 PWM(8) GPIO(57)

# RC input
PB5 TIM3_CH2 TIM3 RCININT PULLUP LOW 

# analog in
PA0 BATT_VOLTAGE_SENS ADC1 SCALE(2)
PA1 BATT_CURRENT_SENS ADC1 SCALE(2)

# Board VCC VCC
PC5 VDD_5V_SENS ADC1 SCALE(2)
PC4 SCALED_V3V3 ADC1 SCALE(2)

# CAN bus
PD0  CAN1_RX CAN1
PD1  CAN1_TX CAN1

# SPI devices
SPIDEV icm45686		SPI1 DEVID2  IMU1_CS	    MODE0  2*MHZ	8*MHZ
SPIDEV bmi088_a		SPI1 DEVID7  IMU1_CS	    MODE3  10*MHZ	10*MHZ
SPIDEV bmi088_g		SPI1 DEVID8  IMU1_CS2	    MODE3  10*MHZ	10*MHZ
SPIDEV icm42688		SPI2 DEVID4  IMU2_CS    	MODE3  2*MHZ	8*MHZ
SPIDEV ramtron		SPI3 DEVID1  FRAM_CS		MODE3  8*MHZ	8*MHZ
SPIDEV rm3100       SPI4 DEVID5  RM3100_CS		MODE3  2*MHZ	8*MHZ
SPIDEV dps310       SPI4 DEVID6  DPS310_CS		MODE3  5*MHZ	8*MHZ

# One IMUs
IMU Invensensev3 SPI:icm45686 ROTATION_YAW_180
IMU Invensensev3 SPI:icm42688 ROTATION_YAW_180
IMU BMI088 SPI:bmi088_a SPI:bmi088_g ROTATION_NONE

define HAL_DEFAULT_INS_FAST_SAMPLE 3

# Barometers
BARO ICP201XX I2C:0:0x63
BARO DPS310 SPI:dps310
BARO LPS2XH I2C:0:0x5C

define HAL_PROBE_EXTERNAL_I2C_BAROS
# define HAL_BARO_ALLOW_INIT_NO_BARO

# Compasses
COMPASS RM3100 SPI:rm3100 false ROTATION_PITCH_180

# define HAL_PROBE_EXTERNAL_I2C_COMPASSES

PE10 LED_RED OUTPUT OPENDRAIN GPIO(90)
PE4 LED_GREEN OUTPUT GPIO(91) LOW
PE3 LED_BLUE OUTPUT OPENDRAIN GPIO(92)

define HAL_GPIO_A_LED_PIN 90
define HAL_GPIO_B_LED_PIN 92
define HAL_GPIO_LED_ON 0

# Enable pins
PB12 VDD_3V3_SENSORS_EN OUTPUT HIGH
PD14 VDD_3V3_SD_CARD_EN OUTPUT HIGH
PD15 VDD_5V_PERIPH_EN OUTPUT HIGH

PC3 VDD_BRICK_nVALID INPUT PULLUP
PC0 VBUS_VALID INPUT PULLUP

PB13 SKYBRUSH_FC_POWER_QUERY_PIN OUTPUT HIGH
PC13 SKYBRUSH_FC_LIGHT_PIN OUTPUT HIGH
PE15 FAN_CONTROL OUTPUT LOW GPIO(13)

# microSD support
PC8 SDMMC1_D0 SDMMC1
PC9 SDMMC1_D1 SDMMC1
PC10 SDMMC1_D2 SDMMC1
PC11 SDMMC1_D3 SDMMC1
PC12 SDMMC1_CK SDMMC1
PD2 SDMMC1_CMD SDMMC1

# enable FAT filesystem support
define HAL_OS_FATFS_IO 1
define HAL_BOARD_LOG_DIRECTORY "/APM/LOGS"
define HAL_BOARD_TERRAIN_DIRECTORY "/APM/TERRAIN"

# enable RAMTROM parameter storage
define HAL_STORAGE_SIZE 32768
define HAL_WITH_RAMTRON 1

DMA_PRIORITY SPI1* SPI2* ADC* TIM* USART2* USART1* UART8*
DMA_NOSHARE  SPI1* SPI2* SPI3* TIM*UP*